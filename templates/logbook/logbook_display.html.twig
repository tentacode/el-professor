{% extends 'base.html.twig' %}

{% block body %}
    <div class="container pt-4">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1 class="text-center">
                    <i class="fas fa-book"></i>
                    Journal de bord
                </h1>

                <div class="short_form">
                    {{ form(form) }}
                </div>

                <p class="text-center lead">Voici votre journal de bord</p>

                {% for log in logs %}
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">{{ log.date|pretty_long_date }}</h5>
                            <h6 class="card-subtitle mb-3 text-muted">j'ai travaill√© sur le projet {{ log.projectLabel }}</h6>
                            <p class="card-text">{{ log.text }}</p>
                        </div>
                        {% if log.media %}
                            <img src="{{ asset('upload/logbook/' ~ log.media) }}" class="card-img-bottom">
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# @TODO put in separate JS file #}
    <script type="text/javascript">
        $(document).on('change', ':file', function() {
            var input = $(this),
                numFiles = input.get(0).files ? input.get(0).files.length : 1,
                label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
            input.trigger('fileselect', [numFiles, label]);
        });

        $(document).ready( function() {
            $('.custom-file input').on('fileselect', function(event, numFiles, label) {
                $('.custom-file label').text(label);
            });
        });
    </script>
{% endblock %}